<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBarStyle.CleanBasket</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.CleanBasket</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBarStyle.CleanBasket</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActionBarStyle.CleanBasket" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle.CleanBasket</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:backgroundStacked">@color/background_stacked_color</item>
    </style>

    <style name="ActionBarTabStyle.CleanBasket" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator</item>
    </style>

    <style name="ActionBarTabBarStyle.CleanBasket" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <item name="android:showDividers">none</item>
    </style>

    <style name="ActionBar.TitleTextStyle.CleanBasket" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="White.Button.CleanBasket" parent="@android:style/TextAppearance.Holo.Widget.Button">
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_text</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Black.Button.CleanBasket" parent="@android:style/TextAppearance.Holo.Widget.Button">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_text</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="White.EditText.CleanBasket" parent="@android:style/TextAppearance.Holo.Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_text</item>
        <item name="android:textCursorDrawable">@color/dialog_text</item>
    </style>

    <style name="Grey.EditText.CleanBasket" parent="@android:style/TextAppearance.Holo.Widget.EditText">
        <item name="android:background">@drawable/textview_back_grey</item>
        <item name="android:height">32dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/info_text</item>
        <item name="android:textCursorDrawable">@color/dialog_text</item>
    </style>

    <style name="White.TextView.CleanBasket" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:background">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_text</item>
    </style>

    <style name="White.Dialog.Title.TextView.CleanBasket" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">29dp</item>
        <item name="android:textSize">21dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dialog_text</item>
    </style>

    <style name="Black.TextView.CleanBasket" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/info_text</item>
    </style>

    <style name="Black.Default.TextView.CleanBasket" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/info_text</item>
    </style>
    
    <style name="Black.Big.TextView.CleanBasket" parent="@android:style/TextAppearance.Holo.Widget.TextView">
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/info_text</item>
    </style>

    <style name="RatringBar.CleanBasket" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/ratingbar_full</item>
        <item name="android:minHeight">57dip</item>
        <item name="android:maxHeight">57dip</item>
        <item name="android:dividerPadding">4dp</item>
        <item name="android:thumb">@null</item>
    </style>
</resources>
