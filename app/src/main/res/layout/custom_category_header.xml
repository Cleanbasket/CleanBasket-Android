<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/order_background_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingBottom="4dp"
        android:orientation="horizontal">

        <!-- <ImageView
            android:id="@+id/imageview_category"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone" /> -->

        <TextView
            style="@style/Light.TextView.CleanBasket"
            android:id="@+id/textview_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/header_text"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_height="10dp"
        android:layout_width="@dimen/slim_line"
        android:background="@color/grey_line_color"
        android:layout_centerVertical="true" />
</RelativeLayout>