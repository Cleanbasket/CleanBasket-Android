<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".EmailDialog">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/login_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout android:id="@+id/mileage_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/White.TextView.CleanBasket"
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_order"
            android:textSize="21dp"
            android:textColor="@color/dialog_text" />

        <TextView
            android:id="@+id/confirm_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="20dp"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/dialog_text" />

        <LinearLayout
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="27dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/layout_total_info"
            android:weightSum="1"
            android:orientation="horizontal">

            <Button
                style="@style/White.Button.CleanBasket"
                android:id="@+id/button_cancel_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:textSize="14dp"
                android:text="@string/label_cancel" />

            <Button
                style="@style/White.Button.CleanBasket"
                android:id="@+id/button_accept_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:textSize="14dp"
                android:text="@string/label_confirm" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>