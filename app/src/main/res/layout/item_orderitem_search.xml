<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:listPreferredItemHeight"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/orderitem_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imageview_orderitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textview_orderitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/orderitem_container"
        android:layout_centerVertical="true"
        android:textSize="11dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageview_extractitem"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_extract" />

    <TextView
        android:id="@+id/textview_orderitem_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textSize="11dp"
        fontPath="fonts/Roboto-Light.ttf" />
</RelativeLayout>