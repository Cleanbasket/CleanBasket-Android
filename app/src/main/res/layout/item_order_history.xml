<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/textview_order_number_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_order_mileage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:id="@+id/line_bottom"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/slim_line"
        android:layout_below="@+id/textview_header"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/point_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/textview_pick_up_label_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_dimen"
            android:layout_weight="0.2"
            android:text="@string/pick_up_time_label"
            android:textSize="12dp" />

        <TextView
            style="@style/Light.TextView.CleanBasket"
            android:id="@+id/textview_pick_up_time_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_dimen"
            android:layout_weight="0.8"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/textview_drop_off_label_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_dimen"
            android:layout_weight="0.2"
            android:text="@string/drop_off_time_label"
            android:textSize="12dp" />

        <TextView
            style="@style/Light.TextView.CleanBasket"
            android:id="@+id/textview_drop_off_time_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_dimen"
            android:layout_weight="0.8"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="1">

        <TextView
            style="@style/Black.Small.Button.CleanBasket"
            android:id="@+id/textview_total_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_dimen"
            android:layout_weight="0.34"
            android:layout_marginRight="10dp"
            android:textStyle="bold" />

        <TextView
            style="@style/Black.Small.Button.CleanBasket"
            android:id="@+id/textview_item_number_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_dimen"
            android:layout_marginRight="10dp"
            android:layout_weight="0.33"
            android:textStyle="bold" />

        <TextView
            style="@style/Black.Small.Button.CleanBasket"
            android:id="@+id/textview_payment_method"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/textview_dimen"
            android:layout_weight="0.33"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>