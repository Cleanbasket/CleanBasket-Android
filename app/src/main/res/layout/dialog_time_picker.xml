<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="297dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".TimePickerDialog">

    <TextView
        style="@style/White.Dialog.Title.TextView.CleanBasket"
        android:id="@+id/textview_time_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <GridView
        android:id="@+id/gridview_time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:numColumns="2" />

    <TextView
        android:id="@+id/textview_time_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/dialog_text"
        android:textSize="21dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="27dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <Button
            style="@style/White.Button.CleanBasket"
            android:id="@+id/button_cancel_time_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:text="@string/label_cancel" />

        <Button
            style="@style/White.Button.CleanBasket"
            android:id="@+id/button_accept_time_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:text="@string/label_confirm" />
    </LinearLayout>
</LinearLayout>