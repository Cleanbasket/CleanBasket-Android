<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".DatePickerDialog">

    <TextView
        style="@style/White.Dialog.Title.TextView.CleanBasket"
        android:id="@+id/textview_time_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <com.squareup.timessquare.CalendarPickerView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="274.4dp"
        android:layout_marginTop="18dp" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="27dp"
        android:weightSum="1"
        android:orientation="horizontal">

        <Button
            style="@style/White.Button.CleanBasket"
            android:id="@+id/button_cancel_date_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:text="@string/label_cancel" />

        <Button
            style="@style/White.Button.CleanBasket"
            android:id="@+id/button_accept_date_picker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:text="@string/label_confirm"
            android:textAlignment="center" />
    </LinearLayout>
</LinearLayout>