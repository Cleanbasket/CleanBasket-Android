<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/listview_item_background"
    tools:context=".CouponDialog">

    <!-- Login progress -->
    <ProgressBar android:id="@+id/loading_progress" style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout android:id="@+id/coupon_form" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <ListView
            android:id="@+id/listview_coupon_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="@color/listview_background" />

        <Button
            android:id="@+id/button_cancel_coupon_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_not_use" />
    </LinearLayout>
</LinearLayout>